sources,sourcestr,optionstr,dotlibstr = scan_libs(target + '=x')

loader = 'load'
for s in sources:
	if s[-3:] == '.la' or s[-3:] == '.lo':
		loader = 'ltload'
		break
dependon([loader])

if os.path.exists(target+'.cli'):
	sources.append(target + '-cli.o')
	options.insert(0, '-lbg-cli')

dependon(sources)

: %(target)s.o
./%(loader)s %(target)s %(sourcestr)s %(optionstr)s %(dotlibstr)s
